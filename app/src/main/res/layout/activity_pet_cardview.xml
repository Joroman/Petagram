<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin_boton"
    card_view:cardCornerRadius="@dimen/corner_radius_card_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/cv_linear_layout_padding"
        android:paddingEnd="@dimen/cv_linear_layout_padding"
        android:paddingRight="@dimen/cv_linear_layout_padding_right"
        android:paddingLeft="@dimen/cv_linear_layout_padding">

        <LinearLayout
            android:id="@+id/id_ll_pet_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/id_ll_pet_foto_pading"
            android:paddingTop="@dimen/id_ll_pet_foto_pading"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_foto_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/perro1"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/cv_linear_layout_padding"
        >
            <ImageButton
                android:id="@+id/ib_bone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_bone_layout_marginleft"
                android:paddingRight="@dimen/cv_linear_layout_padding"
                android:src="@drawable/black_bone_light"
            />

            <TextView
                android:id="@+id/tv_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_bone"
                android:text="Andony"
            />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cv_tv_like"
                android:text="5"
                android:paddingRight="@dimen/cv_linear_layout_padding"
           />

            <ImageButton
                android:id="@+id/ib_bone_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_like"
                android:src="@drawable/bone"
            />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>